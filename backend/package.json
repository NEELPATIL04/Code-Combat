{
    "name": "code-combat-backend",
    "version": "2.0.0",
    "description": "TypeScript Backend API for Code Combat with PostgreSQL",
    "main": "dist/index.js",
    "scripts": {
        "dev": "nodemon --exec tsx src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "db:generate": "drizzle-kit generate",
        "db:push": "drizzle-kit push",
        "db:migrate": "tsx src/db/migrate.ts",
        "db:seed": "tsx src/db/seed.ts",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "bcryptjs": "^3.0.3",
        "cors": "^2.8.6",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.45.1",
        "express": "^4.22.1",
        "jsonwebtoken": "^9.0.3",
        "pg": "^8.18.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^25.2.0",
        "drizzle-kit": "^0.31.8",
        "nodemon": "^3.1.11",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}
